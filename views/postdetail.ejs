<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .post {
            border: black;
            /* border-style: solid; */
        }
        .data{
            margin-top: 20px;
            margin-bottom: 20px;
            width: 20;
            height: 40;
            border-style:double;
            text-align: center;
        }
        .replycomment{
         margin-bottom: 20px;
        }

        .end{
            border-style:double;
            margin-top: 20px;
        }
        .input{
            margin-top: 10%;
            width:50% ;
            height:100%;
        }
        .row{
            margin-top: 6px;
        }
        .comments{
            box-sizing: border-box;
            border-style: groove;
        }
    </style>
</head>
<body>
   <h1> <% dataa.forEach(function(dataa){ %> </h1>
    <div class="post">
 Post BY:  <%=dataa.username%>

    </div>
    <div class="data">
<h3>POST</h3>
    </div>
       <%= dataa.post%>
<div class="end"></div>
<% comments.forEach(function(comments){ %>

    <div class="row">
        <div class="col">Comment By: <%=comments.username%></div>
        <div class="col">   <%=comments.comment%></div>
        <form action="/addreplycomment?reply_id=<%=comments.commentid%>&id=<%=dataa.id%>" method="post">
        <input type="text" name="reply" class="replycomment">
        <input type="submit" value="Reply">
    </form>
      </div>
      <%  reply.forEach(function(reply){                                    
if(reply.commentid==comments.commentid) {%>
<div class="row">
    <div class="col">reply By: <%=reply.username%> to <%=comments.username%> </div>
    <div class="col">   <%=reply.reply%></div>
  </div>
  <% }
 }); %>

<% }); %>
<form action="/addcomment?id= <%=dataa.id%>"" method="post">
<input type="text" name="comment" class ="input" placeholder="Enter Your Comment">
<input type="submit" value="Comment">
</form>
<% }); %>
</body>
</html>