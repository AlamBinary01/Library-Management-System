<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>post</title>
    <style>
        .post {
            border: black;
            /* border-style: solid; */
        }
        .data{
            margin-top: 20px;
            margin-bottom: 20px;
            width: 20;
            height: 40;
            border-style:double;
            text-align: center;
        }
        .replycomment{
         margin-bottom: 20px;
         border: 3px solid black;
        }

        .end{
            border-style:double;
            margin-top: 20px;
        }
        .input{
            margin-top: 10%;
            width:50% ;
            height:100%;
        }
        .row{
            margin-top: 6px;
        }
        .comments{
            box-sizing: border-box;
            border-style: groove;
        }
    </style>
</head>
<body>
   <h1> <% dataa.forEach(function(dataa){ %> </h1>
    <div class="post">
 <h3> POST BY  ADMIN </h3>

    </div>
    <div class="data">
<h3><h2>Announment</h2></h3>
    </div>
    <div  class="container border border-dark border-5 rounded-3" style="width: 300px;">
       <%= dataa.post%>
    </div>
<div class="end"></div>
<% comments.forEach(function(comments){ %>

    <div class="row">
        <div class="col">Comment By: <%=comments.username%></div>
        <div class="col"><h5>   <%=comments.comment%></h5></div>
        <form action="/addreplycomment?reply_id=<%=comments.commentid%>&id=<%=dataa.id%>" method="post">
        <input type="text" name="reply" class="replycomment">
        <button type="submit" class="btn btn-dark">Reply</button>
    </form>
      </div>
      <%  reply.forEach(function(reply){                                    
if(reply.commentid==comments.commentid) {%>
<div class="row">
    <div class="col"> <b> Reply By: <%=reply.username%> to <%=comments.username%> </b> </div>
    <div class="col"> <h6> <%=reply.reply%></h6></div>
  </div>
  <% }
 }); %>

<% }); %>
<form action="/addcomment?id= <%=dataa.id%>"" method="post">
<!-- <input type="text" name="comment" class ="input" placeholder="Enter Your Comment"> -->
<input class="form-control" type="text" name="comment" placeholder="Enter Your Comment" >
<button type="submit" class="btn btn-secondary">Comment</button>
</form>
<% }); %>
</body>
</html>